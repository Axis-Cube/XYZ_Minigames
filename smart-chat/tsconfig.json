{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2021",
    "moduleResolution": "Node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./scripts",
    "strictNullChecks": true,
    "types": [
      "@minecraft/server"
    ]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}